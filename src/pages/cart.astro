---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar/Navbar.astro';
// Impor komponen reaktif untuk menampilkan isi keranjang
import CartContents from '../components/CartContents.jsx';
---

<Layout title="Keranjang Belanja - tukangdecant">
  <Navbar />
  <main>
    <section class="cart-page">
      <div class="container">
        <h1>Keranjang Belanja Anda</h1>
        
        {/* Komponen ini akan di-render HANYA di browser pengguna.
          Di server, ia tidak akan dijalankan, sehingga tidak ada error.
          "client:only" adalah kuncinya.
        */}
        <CartContents client:only="react" />

      </div>
    </section>
  </main>
</Layout>

<style>
  .cart-page {
    padding: 4rem 2rem;
    background: #F8F6F4;
    min-height: 80vh; /* Agar footer tidak naik */
  }
  .container {
    max-width: 900px;
    margin: 0 auto;
  }
  h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    color: #222;
    margin-bottom: 2rem;
    text-align: center;
    border-bottom: 2px solid #e5d3b3;
    padding-bottom: 1rem;
  }
</style>