<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment - Transfer GoPay</title>
    <style>
        /* ... CSS Anda tetap sama, tidak perlu diubah ... */
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px; }
        .payment-container { background: white; border-radius: 20px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); padding: 40px; max-width: 500px; width: 100%; text-align: center; position: relative; overflow: hidden; }
        .payment-container::before { content: ''; position: absolute; top: 0; left: 0; right: 0; height: 5px; background: linear-gradient(90deg, #00D4AA, #00A3FF); }
        .gopay-logo { width: 120px; height: 40px; background: #00D4AA; border-radius: 8px; display: flex; align-items: center; justify-content: center; margin: 0 auto 30px; color: white; font-weight: bold; font-size: 18px; }
        h1 { color: #333; margin-bottom: 10px; font-size: 28px; font-weight: 700; }
        .subtitle { color: #666; margin-bottom: 40px; font-size: 16px; }
        .account-info { background: #f8f9ff; border: 2px dashed #00D4AA; border-radius: 15px; padding: 30px; margin-bottom: 30px; position: relative; }
        .account-label { color: #666; font-size: 14px; margin-bottom: 10px; text-transform: uppercase; letter-spacing: 1px; font-weight: 600; }
        .account-number { font-size: 24px; font-weight: bold; color: #333; letter-spacing: 2px; margin-bottom: 20px; font-family: 'Courier New', monospace; }
        .copy-btn { background: #00D4AA; color: white; border: none; padding: 10px 20px; border-radius: 25px; cursor: pointer; font-size: 14px; font-weight: 600; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 8px; }
        .copy-btn:hover { background: #00b894; transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0, 212, 170, 0.3); }
        .copy-btn:active { transform: translateY(0); }
        .amount-input { width: 100%; padding: 15px; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 18px; text-align: center; margin-bottom: 20px; transition: border-color 0.3s ease; }
        .amount-input:focus { outline: none; border-color: #00D4AA; box-shadow: 0 0 0 3px rgba(0, 212, 170, 0.1); }
        .whatsapp-btn { background: #25D366; color: white; border: none; padding: 15px 30px; border-radius: 50px; cursor: pointer; font-size: 16px; font-weight: 600; width: 100%; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 10px; text-decoration: none; }
        .whatsapp-btn:hover { background: #22c55e; transform: translateY(-2px); box-shadow: 0 10px 25px rgba(37, 211, 102, 0.3); }
        .whatsapp-btn:active { transform: translateY(0); }
        .instructions { background: #fff3cd; border: 1px solid #ffeaa7; border-radius: 10px; padding: 20px; margin-bottom: 30px; text-align: left; }
        .instructions h3 { color: #856404; margin-bottom: 15px; font-size: 16px; }
        .instructions ol { color: #856404; font-size: 14px; line-height: 1.6; padding-left: 20px; }
        .instructions li { margin-bottom: 8px; }
        .toast { position: fixed; top: 20px; right: 20px; background: #00D4AA; color: white; padding: 15px 20px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2); opacity: 0; transform: translateX(100%); transition: all 0.3s ease; z-index: 1000; }
        .toast.show { opacity: 1; transform: translateX(0); }
        @media (max-width: 600px) {
            .payment-container { padding: 30px 20px; margin: 10px; }
            h1 { font-size: 24px; }
            .account-number { font-size: 20px; }
        }
    </style>
</head>
<body>
    <div class="payment-container">
        <div class="gopay-logo">GoPay</div>
        
        <h1>Pembayaran</h1>
        <p class="subtitle">Transfer ke akun GoPay di bawah ini</p>

        <div class="instructions">
            <h3>📋 Cara Pembayaran:</h3>
            <ol>
                <li>Salin nomor GoPay di bawah ini</li>
                <li>Buka aplikasi GoPay/Gojek</li>
                <li>Pilih "Transfer" atau "Kirim"</li>
                <li>Masukkan nomor dan jumlah pembayaran</li>
                <li>Selesaikan transfer</li>
                <li>Klik tombol WhatsApp untuk konfirmasi</li>
            </ol>
        </div>

        <div class="account-info">
            <div class="account-label">Nomor GoPay</div>
            <div class="account-number" id="gopayNumber">082279801135</div>
            <button class="copy-btn">
                📋 Salin Nomor
            </button>
        </div>

        <input 
            type="number" 
            class="amount-input" 
            id="amount" 
            placeholder="Masukkan jumlah transfer (Rp)"
            min="1"
        >

        <button class="whatsapp-btn">
            📱 Konfirmasi via WhatsApp
        </button>
    </div>

    <div class="toast" id="toast">
        Nomor berhasil disalin! 📋
    </div>

    <script>
    function copyToClipboard() {
        const gopayNumberEl = document.getElementById('gopayNumber');
        if (!gopayNumberEl) {
            console.error('Elemen dengan ID "gopayNumber" tidak ditemukan.');
            return;
        }

        const gopayNumberText = gopayNumberEl.textContent;
        if (!gopayNumberText) return;

        if (navigator.clipboard && navigator.clipboard.writeText) {
            navigator.clipboard.writeText(gopayNumberText).then(() => {
                showToast();
            }).catch(() => {
                fallbackCopy(gopayNumberText);
            });
        } else {
            fallbackCopy(gopayNumberText);
        }
    }

    function fallbackCopy(text) {
        const textArea = document.createElement('textarea');
        textArea.value = text;
        textArea.style.position = 'fixed';
        textArea.style.opacity = '0';
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        
        try {
            document.execCommand('copy');
            showToast();
        } catch (err) {
            alert('Nomor GoPay: ' + text);
        }
        
        document.body.removeChild(textArea);
    }

    function showToast() {
        const toast = document.getElementById('toast');
        if (!toast) return;

        toast.classList.add('show');
        
        setTimeout(() => {
            if (toast) {
                toast.classList.remove('show');
            }
        }, 3000);
    }

    function sendToWhatsApp() {
        const amountInput = document.getElementById('amount') as HTMLInputElement;
        if (!amountInput) {
            console.error('Elemen dengan ID "amount" tidak ditemukan.');
            return;
        }

        const amount = amountInput.value;
        const gopayNumber = '082279801135';
        const whatsappNumber = '6282279801135';

        if (!amount || parseInt(amount) <= 0) {
            alert('Silakan masukkan jumlah transfer terlebih dahulu!');
            return;
        }

        const message = `Halo! Saya sudah melakukan transfer GoPay dengan detail berikut:

📱 *Nomor GoPay:* ${gopayNumber}
💰 *Jumlah:* Rp ${parseInt(amount).toLocaleString('id-ID')}

Mohon dikonfirmasi ya. Terima kasih! 🙏`;

        const encodedMessage = encodeURIComponent(message);
        const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;

        window.open(whatsappUrl, '_blank');
    }

    // --- KODE BARU DITAMBAHKAN DI SINI ---
    // Daftarkan semua event listener setelah dokumen siap
    document.addEventListener('DOMContentLoaded', () => {
        // Tombol untuk menyalin nomor
        const copyButton = document.querySelector('.copy-btn');
        if (copyButton) {
            copyButton.addEventListener('click', copyToClipboard);
        }

        // Tombol untuk konfirmasi WhatsApp
        const whatsappButton = document.querySelector('.whatsapp-btn');
        if (whatsappButton) {
            whatsappButton.addEventListener('click', sendToWhatsApp);
        }

        // Event listener untuk input jumlah transfer
        const amountInputForEvents = document.getElementById('amount') as HTMLInputElement;
        if (amountInputForEvents) {
            amountInputForEvents.addEventListener('input', function(e) {
                const target = e.target as HTMLInputElement;
                if (target) {
                    let value = target.value.replace(/\D/g, '');
                    target.value = value;
                }
            });

            amountInputForEvents.addEventListener('keypress', function(e: KeyboardEvent) {
                if (e.key === 'Enter') {
                    sendToWhatsApp();
                }
            });
        }
    });
    </script>
</body>
</html>