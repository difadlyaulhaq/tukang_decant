<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">

<Layout>
  <Navbar />
  <main>
    <section class="hero">
      <div class="hero-content">
        <h1>Discover Your Perfect Scent</h1>
        <p>Explore our premium collection of perfumes for every occasion</p>
        <a href="/product/all" class="cta-button">Shop Now</a>
