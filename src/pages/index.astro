---
// pages/index.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar/Navbar.astro';
---

<Layout>
  <Navbar />
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Discover Your Perfect Scent</h1>
        <p>Explore our premium collection of perfumes for every occasion</p>
        <a href="/product" class="cta-button">Shop Now</a>
      </div>
      <div class="hero-image">
        <div class="perfume-bottle"></div>
      </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-products">
      <div class="container">
        <h2>Featured Products</h2>
        <div class="products-grid">
          <div class="product-card">
            <div class="product-image"></div>
            <h3>Elegant Rose</h3>
            <p class="price">$89.99</p>
            <button class="add-to-cart">Add to Cart</button>
          </div>
          <div class="product-card">
            <div class="product-image"></div>
            <h3>Ocean Breeze</h3>
            <p class="price">$79.99</p>
            <button class="add-to-cart">Add to Cart</button>
          </div>
          <div class="product-card">
            <div class="product-image"></div>
            <h3>Midnight Noir</h3>
            <p class="price">$99.99</p>
            <button class="add-to-cart">Add to Cart</button>
          </div>
        </div>
      </div>
    </section>

    <!-- About Preview -->
    <section class="about-preview">
      <div class="container">
        <div class="about-content">
          <h2>Crafted with Passion</h2>
          <p>For over 20 years, we've been creating exceptional fragrances that capture the essence of luxury and elegance. Each perfume is carefully crafted using the finest ingredients from around the world.</p>
          <a href="/about" class="learn-more">Learn More</a>
        </div>
        <div class="about-image">
          <div class="fragrance-lab"></div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, #f8f4ff 0%, #e8d8ff 100%);
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    gap: 3rem;
  }

  .hero-content {
    flex: 1;
  }

  .hero-content h1 {
    font-size: 3rem;
    color: #2d1b69;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-content p {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .cta-button {
    background: linear-gradient(135deg, #2d1b69 0%, #4a148c 100%);
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .cta-button:hover {
    transform: translateY(-2px);
  }

  .hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .perfume-bottle {
    width: 200px;
    height: 300px;
    background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
    border-radius: 20px 20px 40px 40px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .perfume-bottle::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 40px;
    background: #2d1b69;
    border-radius: 10px;
  }

  .featured-products {
    padding: 4rem 2rem;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .featured-products h2 {
    text-align: center;
    font-size: 2.5rem;
    color: #2d1b69;
    margin-bottom: 3rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .product-image {
    width: 120px;
    height: 180px;
    background: linear-gradient(135deg, #f8f4ff 0%, #e8d8ff 100%);
    border-radius: 15px 15px 30px 30px;
    margin: 0 auto 1rem;
  }

  .product-card h3 {
    color: #2d1b69;
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
  }

  .price {
    font-size: 1.5rem;
    font-weight: bold;
    color: #4a148c;
    margin-bottom: 1rem;
  }

  .add-to-cart {
    background: linear-gradient(135deg, #2d1b69 0%, #4a148c 100%);
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    transition: transform 0.3s ease;
  }

  .add-to-cart:hover {
    transform: translateY(-2px);
  }

  .about-preview {
    padding: 4rem 2rem;
    background: #f8f4ff;
  }

  .about-preview .container {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .about-content {
    flex: 1;
  }

  .about-content h2 {
    font-size: 2.5rem;
    color: #2d1b69;
    margin-bottom: 1.5rem;
  }

  .about-content p {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .learn-more {
    color: #4a148c;
    text-decoration: none;
    font-weight: bold;
    border-bottom: 2px solid #4a148c;
    transition: color 0.3s ease;
  }

  .learn-more:hover {
    color: #2d1b69;
  }

  .about-image {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .fragrance-lab {
    width: 250px;
    height: 200px;
    background: linear-gradient(135deg, #2d1b69 0%, #4a148c 100%);
    border-radius: 15px;
    position: relative;
  }

  .fragrance-lab::before {
    content: '';
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    bottom: 20px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      text-align: center;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .about-preview .container {
      flex-direction: column;
    }

    .products-grid {
      grid-template-columns: 1fr;
    }
  }
</style>