---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar/Navbar.astro';

const products = [
    {
        name: "Ocean Breeze",
        category: "men",
        categoryLabel: "Men's Fragrance",
        description: "Fresh and invigorating scent with marine notes",
        price: "$79.99",
        imageClass: "men-perfume"
    },
    {
        name: "Midnight Noir",
        category: "men",
        categoryLabel: "Men's Fragrance",
        description: "Bold and mysterious with woody undertones",
        price: "$99.99",
        imageClass: "men-perfume"
    },
    {
        name: "Elegant Rose",
        category: "women",
        categoryLabel: "Women's Fragrance",
        description: "Romantic and feminine with floral notes",
        price: "$89.99",
        imageClass: "women-perfume"
    },
    {
        name: "Vanilla Dreams",
        category: "women",
        categoryLabel: "Women's Fragrance",
        description: "Sweet and warm with vanilla and amber",
        price: "$94.99",
        imageClass: "women-perfume"
    },
    {
        name: "Citrus Harmony",
        category: "unisex",
        categoryLabel: "Unisex Fragrance",
        description: "Fresh citrus blend perfect for everyone",
        price: "$84.99",
        imageClass: "unisex-perfume"
    },
    {
        name: "Mystic Woods",
        category: "unisex",
        categoryLabel: "Unisex Fragrance",
        description: "Earthy and sophisticated forest scent",
        price: "$104.99",
        imageClass: "unisex-perfume"
    }
];
---

<Layout>
  <Navbar />
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Temukan Aroma Eksklusif Favoritmu</h1>
        <p>Eksplorasi koleksi parfum premium kami yang dirancang untuk setiap karakter dan momen spesial Anda.</p>
        <a href="#products" class="cta-button">Lihat Koleksi</a>
      </div>
      <div class="hero-image">
        <div class="perfume-bottle"></div>
      </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-products" id="products">
      <div class="container">
        <h2>Koleksi Parfum Unggulan</h2>
        <div class="filter-buttons" style="justify-content:center; margin-bottom:2rem;">
          <button class="filter-btn active" data-filter="all">Semua Produk</button>
          <button class="filter-btn" data-filter="men">Pria</button>
          <button class="filter-btn" data-filter="women">Wanita</button>
          <button class="filter-btn" data-filter="unisex">Unisex</button>
        </div>
        <div class="products-grid">
          {products.map(product => (
            <div class="product-card" data-category={product.category}>
              <div class={`product-image ${product.imageClass}`}></div>
              <h3>{product.name}</h3>
              <p class="category">{product.categoryLabel}</p>
              <p class="description">{product.description}</p>
              <p class="price">{product.price}</p>
              <button class="add-to-cart">Tambah ke Keranjang</button>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, #F8F6F4 0%, #E3E3E3 100%);
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    gap: 3rem;
  }

  .hero-content {
    flex: 1;
  }

  .hero-content h1 {
    font-size: 3rem;
    color: #222222;
    margin-bottom: 1rem;
    line-height: 1.2;
    font-family: 'Playfair Display', serif;
  }

  .hero-content p {
    font-size: 1.2rem;
    color: #444444;
    margin-bottom: 2rem;
    font-family: 'Poppins', sans-serif;
  }

  .cta-button {
    background: linear-gradient(135deg, #BFA181 0%, #C9B37E 100%);
    color: #222222;
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.3s ease, background 0.3s ease, color 0.3s ease;
    font-weight: 700;
    box-shadow: 0 2px 8px rgba(191, 161, 129, 0.10);
    font-family: 'Poppins', sans-serif;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    background: linear-gradient(135deg, #C9B37E 0%, #BFA181 100%);
    color: #181818;
  }

  .hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .perfume-bottle {
    width: 200px;
    height: 300px;
    background: linear-gradient(135deg, #F8F6F4 0%, #E3E3E3 100%);
    border-radius: 20px 20px 40px 40px;
    box-shadow: 0 10px 30px rgba(34, 34, 34, 0.10);
    position: relative;
  }

  .perfume-bottle::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 40px;
    background: #BFA181;
    border-radius: 10px;
  }

  .featured-products {
    padding: 4rem 2rem;
    background: #F8F6F4;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .featured-products h2 {
    text-align: center;
    font-size: 2.5rem;
    color: #222222;
    margin-bottom: 3rem;
    font-family: 'Playfair Display', serif;
  }

  .filter-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 0.8rem 1.5rem;
    border: 2px solid #BFA181;
    background: white;
    color: #BFA181;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
  }
  .filter-btn.active,
  .filter-btn:hover {
    background: #BFA181;
    color: #fff;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background: #fff;
    border-radius: 16px;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 4px 15px rgba(34, 34, 34, 0.10);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #E3E3E3;
    font-family: 'Poppins', sans-serif;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(34, 34, 34, 0.15);
    border-color: #BFA181;
  }

  .product-image {
    width: 120px;
    height: 180px;
    background: linear-gradient(135deg, #F8F6F4 0%, #E3E3E3 100%);
    border-radius: 15px 15px 30px 30px;
    margin: 0 auto 1rem;
    border: 2px solid #BFA181;
  }
  .men-perfume {
    background: linear-gradient(135deg, #BFA181 0%, #C9B37E 100%);
  }
  .women-perfume {
    background: linear-gradient(135deg, #C9B37E 0%, #BFA181 100%);
  }
  .unisex-perfume {
    background: linear-gradient(135deg, #BFA181 0%, #E3E3E3 100%);
  }

  .product-card h3 {
    color: #222222;
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
    font-family: 'Playfair Display', serif;
  }

  .category {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Poppins', sans-serif;
  }

  .description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 1rem;
    font-family: 'Poppins', sans-serif;
  }

  .price {
    font-size: 1.5rem;
    font-weight: bold;
    color: #BFA181;
    margin-bottom: 1rem;
    font-family: 'Poppins', sans-serif;
  }

  .add-to-cart {
    background: linear-gradient(135deg, #BFA181 0%, #C9B37E 100%);
    color: #222222;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    transition: transform 0.3s ease, background 0.3s ease, color 0.3s ease;
    font-weight: 500;
    box-shadow: 0 2px 8px rgba(191, 161, 129, 0.10);
    font-family: 'Poppins', sans-serif;
    width: 100%;
  }

  .add-to-cart:hover {
    transform: translateY(-2px);
    background: linear-gradient(135deg, #C9B37E 0%, #BFA181 100%);
    color: #181818;
  }

  .product-card.hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      text-align: center;
    }
    .hero-content h1 {
      font-size: 2rem;
    }
    .products-grid {
      grid-template-columns: 1fr;
    }
    .filter-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const productCards = document.querySelectorAll('.product-card');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        const filterValue = button.getAttribute('data-filter');
        productCards.forEach(card => {
          if (filterValue === 'all' || card.getAttribute('data-category') === filterValue) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });

    const addToCartButtons = document.querySelectorAll('.add-to-cart');
    addToCartButtons.forEach(button => {
      button.addEventListener('click', () => {
        const btn = button as HTMLButtonElement;
        btn.textContent = 'Ditambahkan!';
        btn.style.background = '#22c55e';
        btn.disabled = true;
        setTimeout(() => {
          btn.textContent = 'Tambah ke Keranjang';
          btn.style.background = '';
          btn.disabled = false;
        }, 1200);
      });
    });
  });
</script>
