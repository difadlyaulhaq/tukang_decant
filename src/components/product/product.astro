---
// pages/product/index.astro
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar/Navbar.astro';

// Product data array for easier management and scalability
const products = [
    {
        name: "Ocean Breeze",
        category: "men",
        categoryLabel: "Men's Fragrance",
        description: "Fresh and invigorating scent with marine notes",
        price: "$79.99",
        imageClass: "men-perfume"
    },
    {
        name: "Midnight Noir",
        category: "men",
        categoryLabel: "Men's Fragrance",
        description: "Bold and mysterious with woody undertones",
        price: "$99.99",
        imageClass: "men-perfume"
    },
    {
        name: "Elegant Rose",
        category: "women",
        categoryLabel: "Women's Fragrance",
        description: "Romantic and feminine with floral notes",
        price: "$89.99",
        imageClass: "women-perfume"
    },
    {
        name: "Vanilla Dreams",
        category: "women",
        categoryLabel: "Women's Fragrance",
        description: "Sweet and warm with vanilla and amber",
        price: "$94.99",
        imageClass: "women-perfume"
    },
    {
        name: "Citrus Harmony",
        category: "unisex",
        categoryLabel: "Unisex Fragrance",
        description: "Fresh citrus blend perfect for everyone",
        price: "$84.99",
        imageClass: "unisex-perfume"
    },
    {
        name: "Mystic Woods",
        category: "unisex",
        categoryLabel: "Unisex Fragrance",
        description: "Earthy and sophisticated forest scent",
        price: "$104.99",
        imageClass: "unisex-perfume"
    }
];
---

<Layout>
    <Navbar />
    <main>
        <!-- Page Header -->
        <section class="page-header">
            <div class="container">
                <h1>Our Perfume Collection</h1>
                <p>Discover the perfect fragrance for every moment</p>
            </div>
        </section>

        <!-- Filter Section -->
        <section class="filters">
            <div class="container">
                <div class="filter-buttons">
                    <button class="filter-btn active" data-filter="all">All Products</button>
                    <button class="filter-btn" data-filter="men">Men</button>
                    <button class="filter-btn" data-filter="women">Women</button>
                    <button class="filter-btn" data-filter="unisex">Unisex</button>
                </div>
            </div>
        </section>

        <!-- Products Grid -->
        <section class="products-section">
            <div class="container">
                <div class="products-grid">
                    {products.map(product => (
                        <div class="product-card" data-category={product.category}>
                            <div class={`product-image ${product.imageClass}`}></div>
                            <div class="product-info">
                                <h3>{product.name}</h3>
                                <p class="category">{product.categoryLabel}</p>
                                <p class="description">{product.description}</p>
                                <p class="price">{product.price}</p>
                                <button class="add-to-cart">Add to Cart</button>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .page-header {
        background: linear-gradient(135deg, #f8f4ff 0%, #e8d8ff 100%);
        padding: 3rem 2rem;
        text-align: center;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .page-header h1 {
        font-size: 2.5rem;
        color: #2d1b69;
        margin-bottom: 1rem;
    }
    .page-header p {
        font-size: 1.2rem;
        color: #666;
    }
    .filters {
        padding: 2rem;
        background: white;
        border-bottom: 1px solid #eee;
    }
    .filter-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }
    .filter-btn {
        padding: 0.8rem 1.5rem;
        border: 2px solid #2d1b69;
        background: white;
        color: #2d1b69;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
    }
    .filter-btn.active,
    .filter-btn:hover {
        background: #2d1b69;
        color: white;
    }
    .products-section {
        padding: 3rem 2rem;
        background: #f8f8f8;
    }
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }
    .product-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }
    .product-card:hover {
        transform: translateY(-5px);
    }
    .product-image {
        width: 100%;
        height: 200px;
        border-radius: 10px;
        margin-bottom: 1rem;
    }
    .men-perfume {
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
    }
    .women-perfume {
        background: linear-gradient(135deg, #be185d 0%, #ec4899 100%);
    }
    .unisex-perfume {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    }
    .product-info h3 {
        color: #2d1b69;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    .category {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .description {
        color: #666;
        line-height: 1.6;
        margin-bottom: 1rem;
    }
    .price {
        font-size: 1.8rem;
        font-weight: bold;
        color: #4a148c;
        margin-bottom: 1rem;
    }
    .add-to-cart {
        background: linear-gradient(135deg, #2d1b69 0%, #4a148c 100%);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
        width: 100%;
        transition: transform 0.3s ease;
    }
    .add-to-cart:hover {
        transform: translateY(-2px);
    }
    .product-card.hidden {
        display: none;
    }
    @media (max-width: 768px) {
        .products-grid {
            grid-template-columns: 1fr;
        }
        .filter-buttons {
            flex-direction: column;
            align-items: center;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const filterButtons = document.querySelectorAll('.filter-btn');
        const productCards = document.querySelectorAll('.product-card');

        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                const filterValue = button.getAttribute('data-filter');
                productCards.forEach(card => {
                    if (filterValue === 'all' || card.getAttribute('data-category') === filterValue) {
                        card.classList.remove('hidden');
                    } else {
                        card.classList.add('hidden');
                    }
                });
            });
        });

        const addToCartButtons = document.querySelectorAll('.add-to-cart');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                button.textContent = 'Added!';
                button.style.background = '#22c55e';
                button.disabled = true;
                setTimeout(() => {
                    button.textContent = 'Add to Cart';
                    button.style.background = '';
                    button.disabled = false;
                }, 1200);
            });
        });
    });
</script>
