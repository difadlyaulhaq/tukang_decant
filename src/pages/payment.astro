---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar/Navbar.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Pembayaran GoPay - Tukang Decant">
    <Navbar />

    <main class="payment-page-wrapper">
        <div class="payment-container">
            <div class="gopay-logo">
                <img src="/images/gopay.png" alt="Logo GoPay">
            </div>
            
            <h1>Konfirmasi Pembayaran</h1>
            <p class="subtitle">Selesaikan pembayaran Anda dengan mentransfer ke akun GoPay kami.</p>

            <div class="instructions">
                <h3><span class="icon">📋</span> Cara Pembayaran:</h3>
                <ol>
                    <li>Salin nomor GoPay tujuan di bawah ini.</li>
                    <li>Buka aplikasi Gojek, pilih menu "Bayar".</li>
                    <li>Pilih "Ke rekening bank", lalu pilih "GoPay" sebagai tujuan.</li>
                    <li>Masukkan nomor dan nominal transfer sesuai total belanja.</li>
                    <li>Setelah berhasil, kembali ke halaman ini dan klik tombol konfirmasi.</li>
                </ol>
            </div>

            <div class="account-info">
                <div class="account-label">Nomor GoPay Tujuan</div>
                <div class="account-number" id="gopayNumber">082279801135</div>
                <button class="copy-btn" id="copyBtn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
                    <span>Salin Nomor</span>
                </button>
            </div>

            <input 
                type="text" 
                class="amount-input" 
                id="amount" 
                placeholder="Masukkan Nominal Transfer (Contoh: 50000)"
            >

            <button class="whatsapp-btn" id="whatsappBtn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                <span>Konfirmasi via WhatsApp</span>
            </button>

            <div class="security-note">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                <span>Transaksi Anda aman dan terlindungi.</span>
            </div>
        </div>

        <div class="toast" id="toast">
            ✅ Nomor berhasil disalin!
        </div>
    </main>
    <Footer />
</Layout>

<style>
    /* ... CSS Lainnya Tetap Sama ... */
    :root {
        --brand-color: #BFA181;
        --brand-gradient: linear-gradient(135deg, #BFA181 0%, #C9B37E 100%);
        --gopay-color: #00b894;
        --whatsapp-color: #25D366;
        --text-dark: #2d3748;
        --text-light: #718096;
        --bg-light: #f5f7fa;
        --bg-card: #ffffff;
        --border-color: #e2e8f0;
    }

    .payment-page-wrapper {
        font-family: 'Inter', sans-serif;
        background: var(--bg-light);
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        line-height: 1.6;
    }
    
    .payment-container {
        background: var(--bg-card);
        border-radius: 24px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        max-width: 550px;
        width: 100%;
        text-align: center;
        position: relative;
        overflow: hidden;
        border: 1px solid var(--border-color);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .payment-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 30px 60px -15px rgba(0, 0, 0, 0.15);
    }
    
    .payment-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: var(--brand-gradient);
    }
    
    /* CSS LOGO DIPERBARUI */
    .gopay-logo {
        width: 140px;
        height: auto;
        margin: 0 auto 2rem;
    }

    .gopay-logo img {
        width: 100%;
        height: auto;
        object-fit: contain;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
    }
    
    h1 {
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        font-size: 2rem;
        font-weight: 700;
        font-family: 'Playfair Display', serif;
    }
    
    .subtitle {
        color: var(--text-light);
        margin-bottom: 2rem;
        font-size: 1.1rem;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .instructions {
        background: #fffaf0;
        border: 1px solid #fed7aa;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: left;
    }
    
    .instructions h3 {
        color: #dd6b20;
        margin-bottom: 1rem;
        font-size: 1.1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .instructions ol {
        color: #7b341e;
        font-size: 0.95rem;
        line-height: 1.7;
        padding-left: 1.2rem;
    }
    
    .instructions li {
        margin-bottom: 0.5rem;
    }
    
    .account-info {
        background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
        border: 2px dashed var(--brand-color);
        border-radius: 18px;
        padding: 2rem;
        margin-bottom: 2rem;
    }
    
    .account-label {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        font-weight: 600;
    }
    
    .account-number {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--text-dark);
        letter-spacing: 2px;
        margin-bottom: 1.5rem;
        font-family: 'SF Mono', 'Monaco', monospace;
        padding: 0.5rem 1rem;
        background: rgba(191, 161, 129, 0.1);
        border-radius: 8px;
        word-wrap: break-word;
    }
    
    .copy-btn {
        background: var(--brand-gradient);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        cursor: pointer;
        font-size: 0.95rem;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 4px 15px rgba(191, 161, 129, 0.25);
    }
    
    .copy-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(191, 161, 129, 0.35);
    }
    
    .amount-input {
        width: 90%;
        padding: 1rem 1.5rem;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        font-size: 1.2rem;
        text-align: center;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
        font-weight: 500;
        color: var(--text-dark);
        background: #fdfdff;
    }
    
    .amount-input:focus {
        outline: none;
        border-color: var(--brand-color);
        box-shadow: 0 0 0 4px rgba(191, 161, 129, 0.15);
        background: white;
    }
    
    .amount-input::placeholder { color: #a0aec0; }
    
    .whatsapp-btn {
        background: var(--whatsapp-color);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 50px;
        cursor: pointer;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
        text-decoration: none;
        box-shadow: 0 8px 20px rgba(37, 211, 102, 0.25);
    }
    
    .whatsapp-btn:hover {
        background: #22c55e;
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(37, 211, 102, 0.35);
    }
    
    .security-note {
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 12px;
        padding: 1rem;
        margin-top: 2rem;
        font-size: 0.9rem;
        color: #166534;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .toast {
        position: fixed;
        top: 2rem;
        right: 2rem;
        background: var(--text-dark);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(45, 55, 72, 0.2);
        opacity: 0;
        transform: translateY(-20px);
        transition: all 0.4s ease-out;
        z-index: 1000;
        font-weight: 500;
    }
    
    .toast.show {
        opacity: 1;
        transform: translateY(0);
    }

    @media (max-width: 600px) {
        .payment-page-wrapper { padding: 1rem; }
        .payment-container { padding: 1.5rem; }
        h1 { font-size: 1.8rem; }
        .account-number { font-size: 1.4rem; }
    }
</style>

<script>
    // Script Anda tidak perlu diubah, sudah bagus
    function setupPaymentPage() {
        const copyButton = document.getElementById('copyBtn');
        const whatsappButton = document.getElementById('whatsappBtn');
        const amountInput = document.getElementById('amount') as HTMLInputElement;

        if (!copyButton || !whatsappButton || !amountInput) {
            console.error("Satu atau lebih elemen penting tidak ditemukan di halaman.");
            return;
        }

        copyButton.addEventListener('click', copyToClipboard);
        whatsappButton.addEventListener('click', () => sendToWhatsApp(amountInput));
        amountInput.addEventListener('input', () => formatAmount(amountInput));
        amountInput.addEventListener('keypress', (e: KeyboardEvent) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                sendToWhatsApp(amountInput);
            }
        });
    }

    function copyToClipboard() {
        const gopayNumberEl = document.getElementById('gopayNumber');
        if (!gopayNumberEl || !gopayNumberEl.textContent) return;

        navigator.clipboard.writeText(gopayNumberEl.textContent)
            .then(() => showToast("Nomor berhasil disalin!"))
            .catch(err => console.error("Gagal menyalin nomor:", err));
    }

    function sendToWhatsApp(amountInput: HTMLInputElement) {
        const amount = amountInput.value.replace(/\D/g, '');
        if (!amount || parseInt(amount) <= 0) {
            alert('Silakan masukkan nominal transfer yang valid terlebih dahulu!');
            amountInput.focus();
            return;
        }

        const whatsappNumber = '6282279801135';
        const message = `Halo, saya ingin konfirmasi pembayaran untuk Tukang Decant.
Jumlah: *Rp ${parseInt(amount).toLocaleString('id-ID')}*

Terima kasih! 🙏`;

        const encodedMessage = encodeURIComponent(message);
        const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
        window.open(whatsappUrl, '_blank');
    }

    function formatAmount(input: HTMLInputElement) {
        let value = input.value.replace(/\D/g, '');
        input.value = value ? parseInt(value).toLocaleString('id-ID') : '';
    }

    function showToast(message: string) {
        const toast = document.getElementById('toast');
        if (!toast) return;

        toast.textContent = message;
        toast.classList.add('show');
        
        setTimeout(() => {
            toast.classList.remove('show');
        }, 3000);
    }
    
    document.addEventListener('DOMContentLoaded', setupPaymentPage);
</script>